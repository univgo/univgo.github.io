.site-search-form
    width 80%;
    margin 2em auto 4em;

    .st-search-input
        padding 0.5em 2%
        width 100%
        font-size 1.3em;
        border-radius 0.3em;
        border 0.1em solid #D14E4E;

.local-search-result-cls

    .local-search-empty
        color #FF4848;
        margin-bottom 3em;
        font-weight bold;
        font-size 1.5em;
        line-height 44px;
        text-align center;
        display block;

    li
        list-style-type none;
        text-align left;
        border-top 1px solid #888888;
        padding-top 20px;
        margin-top 20px;
        line-height 30px;

        a
            font-size 2em;
            font-weight bold
            margin-top 20px;
        a:hover
            color #D14E4E;

        p
            font-size 1em;
            margin-top 1em;

        em
            font-weight bold;
            font-style normal;
            color #FF4848;

    li:first-child
        padding-top 0;
        border-top none;
        margin-top 0;

